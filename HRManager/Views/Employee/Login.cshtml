@model LoginVM

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <meta name="author" content="Yashas Gowda">
    <link rel="stylesheet" href="/css/login_style.css" />
    <title>Employee Login</title>
</head>
<body>
    <div class="container">
        <div class="left">
            <div class="welcome_note">
                <img src="/assets/icon_white.png" alt="logo" />
                <h2>Welcome to</h2>
                <h1>HR Manager</h1>
                <p>An employee manager for maintaining all the employees data.</p>
                <a href="#">LEARN MORE</a>
            </div>
            <div class="login_menu">
                <ul>
                    <li><a asp-controller="admin" asp-action="login">Admin</a></li>
                    <li class="current"><a asp-controller="employee" asp-action="login">Employee</a></li>
                </ul>
            </div>
        </div>

        <div class="right">
            <div class="logo_section">
                <img src="/assets/icon_blue.png" alt="logo" />
                <h5>HRM</h5>
            </div>
            <div class="auth_section">
                <h2>LOGIN</h2>
                <form class="login_form" asp-controller="employee" asp-action="login" method="post">
                    <input asp-for="EmailAddress" placeholder="Email" type="email" />
                    <span asp-validation-for="EmailAddress"></span>

                    <input asp-for="Password" placeholder="Password" type="password" />
                    <span asp-validation-for="Password"></span>

                    <button type="submit">LOGIN</button>
                </form>
                <a href="#">FORGOT PASSOWRD?</a>
            </div>
            <div class="about_section">
                <a href="#">About</a>
                <a href="#">Privacy</a>
            </div>
        </div>
    </div>
</body>
</html>

